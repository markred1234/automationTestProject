<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Online Shopping Test Suite">

    <parameter name="appurl" value="http://automationpractice.com/index.php"/>
<!--    set headless to true if headless is required-->
    <parameter name="isHeadless" value="false"/>


    <test name="Search For Item - Test Case 1">
        <classes>
            <class name="Tests.SearchForItem"/>
        </classes>
    </test> <!-- Test -->

    <test name="Search For Items - Test Case 2">
        <classes>
            <class name="Tests.SearchForItems"/>
        </classes>
    </test> <!-- Test -->

    <test name="Search For Items - Test Case 3">
        <classes>
            <class name="Tests.SearchForItemsDataDriven"/>
        </classes>
    </test> <!-- Test -->

    <test name="Sign Into Account using a global variable - Test Case 4">
        <classes>
            <class name="Tests.SignInToAccount"/>
        </classes>
    </test> <!-- Test -->


    <test name="Add Items and checkout - Test Case 5">
        <classes>
            <class name="Tests.AddItemsAndCheckout"/>
        </classes>
    </test> <!-- Test -->



</suite> <!-- Suite -->



